        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="319dp"
        android:layout_height="146dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/rounded_corners"
