<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/tumma"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_cat">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tumma"
        tools:context=".activity_dog">

        <ImageView
            android:id="@+id/KissaSoundImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:background="#3AD9E3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/img_12" />

        <Button
            android:id="@+id/buMenuCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_corners"
            android:drawableRight="@drawable/menubutton"
            android:text="Valikko"
            android:textColor="#000000"
            app:iconTint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buEnvironmentCat" />

        <Button
            android:id="@+id/buEnvironmentCat"
            android:layout_width="200dp"
            android:layout_height="50dp"

            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners"
            android:text="Ympäristö"
            android:textAllCaps="false"
            android:textColor="#000000"
            app:iconTint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buSocialCat" />

        <Button
            android:id="@+id/buSocialCat"
            android:layout_width="200dp"
            android:layout_height="50dp"

            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners"
            android:text="Liikunta"
            android:textAllCaps="false"
            android:textColor="#000000"
            app:iconTint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buTeethCat" />

        <Button
            android:id="@+id/buTeethCat"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"

            android:background="@drawable/rounded_corners"
            android:text="Turkki ja hoito"
            android:textAllCaps="false"
            android:textColor="#000000"
            app:iconTint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buFeedingCat" />

        <Button
            android:id="@+id/buFeedingCat"
            android:layout_width="200dp"
            android:layout_height="50dp"

            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners"
            android:text="Ravitsemus"
            android:textAllCaps="false"
            android:textColor="#000000"
            app:iconTint="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/KissaImageView" />

        <TextView
            android:id="@+id/tvKissaOtsikko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Kissat"
            android:textColor="#3ADAE4"
            android:textSize="30sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/KissaImageView"
            android:layout_width="234dp"
            android:layout_height="228dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvKissaOtsikko"
            app:srcCompat="@drawable/img_4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>