<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tumma"
    tools:context=".activity_CatSocial">

    <TextView
        android:id="@+id/kissaHampaatTv2"
        android:layout_width="365dp"
        android:layout_height="360dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="sans-serif-light"
        android:text="Kissat tarvitsevat säännöllistä liikuntaa säilyttääkseen terveellisen painon, estääkseen tylsyyttä ja edistääkseen yleistä hyvinvointia.  Sisäkissat eivät pääse liikkumaan ulkotiloihin, mutta ne tarvitsevat silti liikuntaa. Leluilla leikkiminen, kissan puissa kiipeäminen ja palapeli syöttölaitteiden käyttö ovat hienoja tapoja pitää sisäkissat aktiivisina. Kissan tarvitseman liikunnan tyyppi ja määrä riippuvat sen iästä, yleisestä terveydestä ja aktiivisuustasosta. Vanhemmat kissat tai kissat, joilla on terveysongelmia, tarvitsevat vähemmän intensiivistä liikuntaa. Kissat noudattavat todennäköisemmin liikuntarutiinia, jos se on hauskaa ja kiinnostavaa. Virikkeiden ja herkkujen lisääminen voi tehdä sen liikunnasta nautinnollisempaa. "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/KissaSosiaalisuusImg" />

    <TextView
        android:id="@+id/kissaSosiaalisuusOtsikkoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Liikunta"
        android:textColor="#3ADAE4"
        android:textSize="30sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/KissaSosiaalisuusImg"
        android:layout_width="320dp"
        android:layout_height="220dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kissaSosiaalisuusOtsikkoTv"
        app:srcCompat="@drawable/img_11" />
</androidx.constraintlayout.widget.ConstraintLayout>